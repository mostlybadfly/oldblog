<div class='form-group'>
<%= form_for :post, url: posts_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'titlebox'%>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, class: 'textbox' %>
  </p>
 
  <p>
    <%= f.submit 'Save', class: 'btn btn-warning' %>
  </p>
<% end %>
</div>
 