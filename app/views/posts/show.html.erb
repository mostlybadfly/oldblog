<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
    <h3 class="text-center post-title"><%= @post.title %></h3>
      <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <ul class="post-list text-center body-text">
            <li><%= auto_link(simple_format @post.text) %></li>
            <li><%= @post.created_at.in_time_zone("Central Time (US & Canada)").to_formatted_s(:long) %></li>
            <% if signed_in? %>
            <li>
            <%= link_to 'Edit', edit_post_path(@post) %>
            <%= link_to 'Destroy', post_path(@post),
                        method: :delete, data: { confirm: 'Are you sure?' } %>
            </li>
            <% end %>
          </ul>
        </div>
        <div class="col-md-4"></div>
      </div>
  </body>
</html>
