<h2>Sign in</h2>
  <div class ="form-group">
  <%= form_for(:session, url: sessions_path, html: { class: "form-horizontal" }) do |f| %>
 
    <div>
      <%= f.label :email %>
      <div><%= f.text_field :email %></div>
    </div>
    <div>
      <%= f.label :password %>
      <div><%= f.password_field :password %></div>
    </div>
    <div>
    <br>
      <div><%= f.submit "Sign In", class: "btn btn-large btn-primary" %></div>
    </div>
  <% end %>
  </div>
